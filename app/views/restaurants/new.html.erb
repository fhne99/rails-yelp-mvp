<h1>Add a new restaurant</h1>

<div class="container">
  <%= simple_form_for(@restaurant) do |f| %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :category, as: :select, collection: Restaurant::CATEGORY %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
  </div>

  <div class="form-actions btn btn-primary">
    <%= f.button :submit %>
  </div>
<% end %>

</div>
